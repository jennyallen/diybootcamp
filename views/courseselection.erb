<html>
<head>
	<title>Select Courses</title>
	<link href='http://fonts.googleapis.com/css?family=Oswald' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/pure-min.css">
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/grids-responsive-min.css">
	<link href="substyle.css" rel="stylesheet" type="text/css">
</head>

<body>
	<table class="pure-table">
		<tr>
			<th>Title</th>
			<th>Course Number</th>
			<th>Link</th>
			<th>Professor</th>
			<th>Time</th>
			<th>Select Course</th>
		</tr>
		
		<% courses = Scraper.courses %>
		<form action = "/scheduler/yournewschedule" method="post">
		<% courses.each_with_index do |course, i| %>
		<tbody>
        <tr class="pure-table-striped"> 
			<td><%= course[:title] %></td>
			<td><%= course[:number] %></td>
			<% full_link = 'http://oyc.yale.edu' + course[:link] %>
			<td><a href=<%= full_link %> target='_blank'><%= course[:title] %></a></td>
			<td><%= course[:professor] %></td>
			<td>~<%= course[:time] %> Hours</td>
			<td><input type="checkbox" value=<%=i%>/>
		</tr>
		<% end %>
	</table>
	<input class="pure-button" type="input" value="Select">
</form>
</body>
</html>